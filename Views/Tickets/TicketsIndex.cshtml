@model StadiumManagementSys.Models.Tickets;

@{
    ViewData["Title"] = "Location";
}
<h2>@ViewData["Title"]</h2>
<hr />


<div class="stadium" style="display:inline;">
    <div class="top">
        <div class="topleft">
            <br />
            <br />

            <h4>Corner 1</h4>
        </div>
        <div class="topmid">
            <br />
            <br />
            <h3>Zone 1</h3>
        </div>
        <div class="topright">
            <br />
            <br />
            <h4>Corner 2</h4>

        </div>
    </div>
    <div class="mid">
        <div class="midleft">

            <h3>Zone 3</h3>

        </div>
        <div class="midmid">
            <img src="~/images/field.jpg" />
        </div>
        <div class="midright">

            <h3>Zone 4</h3>
        </div>
    </div>
    <div class="bottom">
        <div class="bottomleft">
            <br />
            <br />
            <h4>Corner 3</h4>

        </div>
        <div class="bottommid">
            <br />
            <br />
            <h3>Zone 2</h3>
        </div>
        <div class="bottomright">
            <br />
            <br />
            <h4>Corner 4</h4>

        </div>
    </div>

    <div style="font-family: Arial, Helvetica, sans-serif;display:inline;float:right;position:relative;top:-430px;width:505px">
        <form asp-controller="Tickets" asp-action="TicketsIndex" style="background-color: #fefefe; margin: 3% auto 4% auto; border: 1px solid #888; width: 500px;">


            <div class="container" style="width:80%; padding: 16px;">

                <div class="form-group">
                    <h2>Zone or Corner </h2>
                    <select class="form-control" asp-for="Zone">
                        <option class="hidden" selected="" disabled="">Please select one</option>
                        <option value="Zoon1">Zoon 1</option>
                        <option value="Zoon2">Zoon 2</option>
                        <option value="Zoon3">Zoon 3</option>
                        <option value="Zoon4">Zoon 4</option>
                        <option value="Corner1">Corner 1</option>
                        <option value="Corner2">Corner 2</option>
                        <option value="Corner3">Corner 3</option>
                        <option value="Corner4">Corner 4</option>
                    </select>
                </div>
                <button type="submit">Buy Tickets</button>

            </div>
        </form>
    </div>


</div>

